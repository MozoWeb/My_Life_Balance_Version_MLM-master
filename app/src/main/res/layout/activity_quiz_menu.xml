<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.inducesmile.androidmultiquiz.QuizMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_gravity="fill"
            app:srcCompat="@drawable/quizlogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/start_quiz_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#d291ff"
            android:letterSpacing="0.1"
            android:padding="8dp"
            android:text="@string/select_quiz"
            android:textAllCaps="false"
            android:textColor="@color/pink"
            android:textSize="@dimen/_16sdp" />

        <Button
            android:id="@+id/quiz_instruction_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_selector"
            android:letterSpacing="0.1"
            android:padding="8dp"
            android:text="@string/quiz_instruction"
            android:textAllCaps="false"
            android:textColor="@color/pink"
            android:textSize="@dimen/_16sdp" />

        <Button
            android:id="@+id/btnBrowser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_selector"
            android:letterSpacing="0.1"
            android:padding="8dp"
            android:text="@string/website"
            android:textAllCaps="false"
            android:textColor="@color/pink"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:letterSpacing="0.1"
                android:padding="8dp"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textColor="@color/pink"
                android:textSize="@dimen/_16sdp" />

            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:letterSpacing="0.1"
                android:padding="8dp"
                android:text="@string/register"
                android:textAllCaps="false"
                android:textColor="@color/pink"
                android:textSize="@dimen/_16sdp" />

            <Button
                android:id="@+id/viewUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:letterSpacing="0.1"
                android:padding="8dp"
                android:text="@string/view_users"
                android:textAllCaps="false"
                android:textColor="@color/pink"
                android:textSize="@dimen/_16sdp" />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:letterSpacing="0.1"
                android:padding="8dp"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:textColor="@color/pink"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
